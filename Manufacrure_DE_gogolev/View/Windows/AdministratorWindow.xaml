<Window x:Class="Manufacrure_DE_gogolev.View.Windows.AdministratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Manufacrure_DE_gogolev.View.Windows"
        mc:Ignorable="d"
        Title="AdministratorWindow" Height="720" Width="1280" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Button x:Name="AddUserBtn" Content="Добавить пользователя" Click="AddUserBtn_Click" HorizontalAlignment="Left"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="450" />
            </Grid.ColumnDefinitions>

            <ListView x:Name="UsersLv" SelectionChanged="UsersLv_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ФИО" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Телефон" DisplayMemberBinding="{Binding Phone}"/>
                        <GridViewColumn Header="ИНН" DisplayMemberBinding="{Binding INN}"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <ScrollViewer  Grid.Column="2" HorizontalScrollBarVisibility="Disabled">
                <Grid x:Name="UserDetailsG">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="5" />
                </Grid.RowDefinitions>
                    
                <TextBlock Grid.Column="0" Text="Полное имя"/>
                <TextBox Grid.Column="2" Text="{Binding Name}"/> 
                    
                <TextBlock Grid.Row="2" Text="ИНН:"/>
                <TextBox Grid.Column="2" Grid.Row="2"  Text="{Binding INN}"/>

                <TextBlock Grid.Row="4" Text="Адрес:"/>
                <TextBox Grid.Column="2" Grid.Row="4"  Text="{Binding Addres}"/>

                <TextBlock Grid.Column="0" Grid.Row="6"  Text="Телефон"/>
                <TextBox Grid.Column="2"  Grid.Row="6" Text="{Binding Phone}"/>

                <CheckBox Grid.Column="2" Grid.Row="8" Content="Является покупателем"/>
                    
                <CheckBox Grid.Column="2" Grid.Row="10" Content="Является продавцом"/>
                    

                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
